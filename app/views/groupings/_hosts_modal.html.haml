
.modal#hosts-affected
  .modal-dialog.modal-lg
    .modal-content
      .modal-body
        - grouping.host_stats(filters: filters, limit: 100).each do |host, count|
          %li.row
            .col-md-1
              .badge.badge-info.pull-right=  count
            = host
        - if grouping.host_count(filters: filters) > 100
          %li.row
            .col-md-1
              .badge.badge-info.pull-right
            = "..."
